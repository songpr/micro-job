    "version": "0.2.0",
    "configurations": [
        
        {
            "args": [
                "${workspaceFolder}/test/**/*.test.js",
                "--no-timeout"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "tap Tests",
            "program": "${workspaceFolder}/node_modules/tap/bin/run.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        }
    ]
}